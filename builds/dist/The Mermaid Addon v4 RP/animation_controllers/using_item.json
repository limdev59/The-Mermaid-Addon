{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.using_item": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"using_item": "query.is_using_item>0"
						}
					],
					"animations": [
						"particle_off"
					]
				},
				"using_item": {
					"transitions": [
						{
							"default": "query.is_using_item==0"
						}
					],
					"animations": [
						"particle"
					]
				}
			}
		}
	}
}